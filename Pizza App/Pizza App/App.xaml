<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pizza_App.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Light Theme Colors -->
            <Color x:Key="PrimaryColor">#f7d012</Color>
            <Color x:Key="PrimaryDarkColor">#806b04</Color>
            <Color x:Key="AccentColor">#f9e366</Color>
            <Color x:Key="BackgroundColor">#9b9a76</Color>
            <Color x:Key="SurfaceColor">#a4d39f</Color>
            <Color x:Key="TextPrimaryColor">#44443c</Color>
            <!-- For simplicity, using the same value for secondary text -->
            <Color x:Key="TextSecondaryColor">#44443c</Color>
            <Color x:Key="BorderColor">#806b04</Color>
            <Color x:Key="CardShadowColor">#20000000</Color>

            <!-- Dark Theme Colors -->
            <Color x:Key="PrimaryColorDark">#f7d012</Color>
            <Color x:Key="PrimaryDarkColorDark">#806b04</Color>
            <Color x:Key="AccentColorDark">#f9e366</Color>
            <!-- Using the dark text color as the dark theme background -->
            <Color x:Key="BackgroundColorDark">#44443c</Color>
            <!-- For dark theme surface elements, using the light background color -->
            <Color x:Key="SurfaceColorDark">#9b9a76</Color>
            <!-- In dark theme, using a bright accent for primary text -->
            <Color x:Key="TextPrimaryColorDark">#f9e366</Color>
            <Color x:Key="TextSecondaryColorDark">#f7d012</Color>
            <Color x:Key="BorderColorDark">#806b04</Color>
            <Color x:Key="CardShadowColorDark">#40000000</Color>

            <!-- Label Styles for Headers and Body Text -->
            <Style TargetType="Label" x:Key="HeaderLabel">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontFamily" Value="Montserrat-Bold" />
                <Setter Property="TextColor" 
                        Value="{AppThemeBinding Light={StaticResource TextPrimaryColor}, Dark={StaticResource TextPrimaryColorDark}}" />
                <Setter Property="Margin" Value="20,20,20,10" />
            </Style>

            <Style TargetType="Label" x:Key="SubHeaderLabel">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="Montserrat-SemiBold" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextPrimaryColor}, Dark={StaticResource TextPrimaryColorDark}}" />
                <Setter Property="Margin" Value="20,10,20,5" />
            </Style>

            <Style TargetType="Label" x:Key="BodyLabel">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Montserrat-Regular" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextSecondaryColor}, Dark={StaticResource TextSecondaryColorDark}}" />
                <Setter Property="Margin" Value="20,5,20,5" />
            </Style>

            <!-- Button Styles (Primary and Secondary) -->
            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" 
                        Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource PrimaryColorDark}}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontFamily" Value="Montserrat-SemiBold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="Margin" Value="20,10" />
            </Style>

            <Style TargetType="Button" x:Key="SecondaryButton">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource PrimaryColorDark}}" />
                <Setter Property="FontFamily" Value="Montserrat-SemiBold" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="BorderColor"
                        Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource PrimaryColorDark}}" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="Margin" Value="20,10" />
            </Style>

            <!-- Entry and Frame Styles -->
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="Montserrat-Regular" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor"
                        Value="{AppThemeBinding Light={StaticResource TextPrimaryColor}, Dark={StaticResource TextPrimaryColorDark}}" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource SurfaceColor}, Dark={StaticResource SurfaceColorDark}}" />
                <Setter Property="Margin" Value="20,5" />
            </Style>

            <Style TargetType="Frame">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource BackgroundColor}, Dark={StaticResource BackgroundColorDark}}" />
                <Setter Property="BorderColor"
                        Value="{AppThemeBinding Light={StaticResource BorderColor}, Dark={StaticResource BorderColorDark}}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Margin" Value="15,10" />
                <Setter Property="Padding" Value="15" />
            </Style>

            <!-- Original Default Button Style (Visual States) -->
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <!-- 20% alpha of PrimaryColor -->
                                    <Setter Property="BackgroundColor" Value="#33f7d012" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
